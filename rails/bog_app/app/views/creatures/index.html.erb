<h1>Listing Creatures</h1>
<%= link_to 'New Creature', new_creature_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
 
  <% @creatures.each do |creature| %>
    <tr>
      <td><%= creature.name %></td>
      <td><%= creature.description %></td>
      <td><%= link_to creature.name, creature_path(creature) %></td>
      <td><%= link_to creature.description, creature_path(creature) %></td>


      <td><%= link_to 'Show', creature_path(creature) %></td>
      <td><%= link_to 'Edit', edit_creature_path(creature) %></td>
      <td><%= link_to 'Destroy', creature_path(creature),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
