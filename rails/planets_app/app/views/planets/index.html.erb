<h1>Listing Planets</h1>
<%= link_to 'New Planet', new_planet_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Distance</th>
    <th colspan="3"></th>
  </tr>
 
  <% @planets.each do |planet| %>
    <tr>
      <td><%= planet.name %></td>
      <td><%= planet.distance_from_sun %></td>
      <td><%= link_to 'Show', planet_path(planet) %></td>
      <td><%= link_to 'Edit', edit_planet_path(planet) %></td>
      <td><%=link_to 'Destroy', planet_path(planet),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
